<!DOCTYPE html>
<html>
  <head>
    <title>Movement</title>
    <%= csrf_meta_tags %>
    <link href="https://fonts.googleapis.com/css?family=Bangers|Oswald|Passion+One|Open+Sans" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
  <body>
      <div class="row">
        <div class="col-sm-3 left-column center">

          <div class="logo header-box">
            <%#= link_to image_tag("logo.png", :class => "logo img-responsive logo-center"), people_path %>
            <%= link_to 'Momentum', people_path %>
          </div>
          <div class="center-notice grey"><%= flash[:notice] %></div>

          <nav class="nav">
            <li><%= link_to "Home", root_path, :class => 'notWorking' %></li>
            <li><%= link_to "People", root_path, :class => 'notWorking' %></li>

            <li><%= link_to "Serve", root_path, :class => 'notWorking' %></li>

            <li><%= link_to "Stats", root_path, :class => 'notWorking' %></li>

            <hr>
            <li><%= link_to "Departments", root_path, :class => 'notWorking' %></li>
            <li><%= link_to "Events", root_path, :class => 'notWorking' %></li>

            <h5>Attendance Entry</h5>
            <h5>Groups</h5>
            <h5>Files</h5>
            <h5>Give</h5>
            <h5>Forms</h5>
            <h5>Mail Merges</h5>
            <h5>Messages</h5>
            <h5>Needs/Announcements</h5>
            <h5>Report Bug</h5>

        </div> <!-- Left end -->

        <div class="col-sm-9 right-column">
          <div class="topbar">
            <div class="login pull-right">
            <% if current_user %>
                <li><%= link_to current_user.email, edit_user_registration_path %> |
                <%= link_to "Log-out", destroy_user_session_path, method: "delete" %>
              <%= image_tag("icon1.png", :class => "icon-size")%></li>
            <% else %>
                <li><%= link_to "Login", new_user_session_path %></a>
                <%= image_tag("icon1.png", :class => "icon-size")%></li>
            <% end %>

            </div>
          </div>

          <div class="content">
             <%= yield %>
          </div>
        </div>
      </div>

  <!-- LOGIN -->
   <% if @showlogin === true %>
   <div class="menu">
     <% if current_user %>
     <%= link_to "Logout", destroy_user_session_path, method: "delete" %> |
     <%= link_to current_user.email, edit_user_registration_path %>
     <% else %>
     <%= link_to "Log-in", new_user_session_path %></a>
     <%= link_to "Signup", new_user_registration_path %></a>
     <% end %>
   </div> <!-- login end -->
   <% end %>

   </nav>
  </body>
</html>
