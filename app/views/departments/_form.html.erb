
  <div class="well">
    <%= form_for [@department] do |f| %>
    <div class="field">
    <%= f.text_field :name, :placeholder => 'Department Name', :class => 'form-control input-lg' %>
    </div>
    <div class="field">
    <%= f.text_area :description, :placeholder => 'Description', :class => 'form-control' %>
    </div>
    <div class="field">
    <%= f.hidden_field :leaderName, :placeholder => 'Leader Name', :class => 'form-control input-lg' %>
    </div>

    <div class="field center">
      <%= f.submit "Save", :class => "btn btn-primary"%>
    </div>
  <% end %>
    <%= link_to "Cancel", :back, {:class=>"btn-sm btn-default btn-cancel"} %>
</div>
