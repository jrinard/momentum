<div class="well">
    <%= form_for [@unit, @part] do |f| %>
    <div class="field">
    <%= f.text_field :title, :placeholder => 'Title', :class => 'form-control input-lg' %>
    </div>
    <div class="field">
    <%= f.text_field :firstname, :placeholder => 'First Name', :class => 'form-control input-lg' %>
    </div>
    <div class="field">
    <%= f.text_field :lastname, :placeholder => 'Last Name', :class => 'form-control input-lg',:value => @unit.familyname %>
    </div>
    <div class="field">
    <%= f.text_field :allergies, :placeholder => 'Allergies', :class => 'form-control input-lg' %>
    </div>
    <div class="field">
    <%= f.text_field :parent, :placeholder => 'Guardian', :class => 'form-control input-lg',:value => @unit.familyname %>
    </div>
    <div class="field">
      <label>Birthdate</label>
    <%= f.date_select :birthdate, :start_year=>1940,:end_year=>2030, :placeholder => 'birthdate', :class => 'form-control input-lg' %>
    </div>
    <div class="field">
    <%= f.text_area :notes, :placeholder => 'notes', :class => 'form-control input-lg' %>
    </div>


<!-- Select Box -->
    <%#= f.select :backCheck, options_for_select([[''], ['True']], :selected => :backCheck) %>

    <div class="field center">
      <%= f.submit "Save", :class => "btn-lg btn-primary"%>
    </div>

    <%= link_to "Cancel", :back, {:class=>"btn-sm btn-default btn-cancel"} %>
<% end %>

</div>
