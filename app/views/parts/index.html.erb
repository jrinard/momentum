<div class="flex-container-big">
  <div class="flex-block-big">

      <div class="h2-white pull-left">Parts - People</div><br>
      <%= link_to "New Person", new_part_path, :class => "btn-sm btn-warning pull-right" %>

      <br>
      <br>
      <% if @part.any? %>
          <% @part.each do |p1| %>


              <div class="well">
                <span class = "NA" ><%= p1.firstname %> </span>
                <span class = "NA" ><%= p1.lastname %></span>
                <span class = "NA" ><%= p1.backCheck %></span>
                  <%#= link_to "Edit", edit_part_path(p1), :class => "btn-sm btn-warning" %>
                <%= link_to "Edit", part_path(p1), :class => "btn-sm btn-warning pull-right" %>


              </div><!-- well end -->


              <% end %>
            <% else %>
                <h3 class="h2-white pull-left">No People</h3>

            <% end %>





  </div><!-- flex-block end -->
</div><!-- flex-container end -->
