<div class="flex-container-big">
  <div class="flex-block-big">

      <div class="h2-white pull-left">Parts - People</div><br>
      <%= link_to "New Person", new_part_path, :class => "btn-sm btn-warning pull-right" %>

      <br>
      <br>
      <% if @part.any? %>
          <% @part.each do |p1| %>


              <div class="well">
                <span class = "solid" ><%= p1.firstName %> </span>
                <span class = "solid" ><%= p1.lastName %></span>

                <%= link_to "Edit", edit_part_path(p1), :class => "btn-sm btn-warning" %>
                  <%= link_to "Delete", part_path(@part), :class => "btn-sm btn-danger",:data => {:confirm => "Are you sure?",:method => "delete"}, remote: true  %>

              </div><!-- well end -->


              <% end %>
            <% else %>
                <h3>No part</h3>

            <% end %>





  </div><!-- flex-block end -->
</div><!-- flex-container end -->
