<div class="row">
  <div class="col-sm-12">
    <div class="form">
    <div class="h2-white">User Details</div>
      <div class="well">

        <table>
          <tbody>
            <tr>
              <td class="">Email:</td>
              <td><%= @user.email %></td>
            </tr>
            <tr>
              <td class="">Role:</td>
              <td><%= @user.role %></td>
            </tr>

            <tr>
              <td class="">Registered</td>
              <td><%= @user.created_at.strftime("%b %d, %Y") %></td>
            </tr>
            <tr>
              <td class="">Last Sign In</td>
              <td><%= @user.last_sign_in_at.strftime("%b %d %Y, %I:%M %P") %></td>
            </tr>
            <tr>
              <td class="">Sign In Amount</td>
              <td><%= @user.sign_in_count %></td>
            </tr>

          </tbody>
        </table><br><br>

        <%= link_to_if(can?(:update,@user), "Edit", edit_user_path(@user)) %>
        |
        <%= link_to_if(can?(:delete, @user), "Delete", user_path(@user), :data => {:confirm => "Are you sure?",:method => "delete"}) {} %>

      </div>
    </div>
  </div>
</div>
