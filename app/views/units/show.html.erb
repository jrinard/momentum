<div class="flex-container-big">
  <div class="flex-block-big">

    <div class="row">
      <div class="col-sm-5">

        <div class="h2-white">Unit - Family - Show</div>
        <br><br>



        <h3><%= @unit.familyName %> Family
          <div class="pull-right">
            <%= link_to "Add Person", new_unit_part_path(@unit), :class => "btn-sm btn-warning pull-right" %>
          </div>
        </h3><br><!-- family-name-end -->

    <!-- PEOPLE -->
        <% if @unit.parts.any? %>
          <% @unit.parts.each do |part| %>
            <span class="grey-btn">
              <%= link_to "#{part.firstName} #{part.lastName}", edit_unit_part_path(@unit, part.id), :class => "NA" %>
            </span>
                  <span class="black">
              <%= link_to "X", unit_part_path(@unit, part), :class => "black", :id => "delete-test", :data => {:confirm => "Are you sure?",:method => "delete"}%>
            </span><br><br>
          <% end %>
          <% else %><br><br>
        <% end %><br>
          <span class="h5-grey">Address</span>
          <p><%= @unit.street %></p>
          <p><%= @unit.city %> <%= @unit.state %></p>
          <p><%= @unit.zip %> <%= @unit.country %></p>
          <span class="h5-grey">Primary Phone</span> <span class="h5-grey">Secondary Phone</span>
          <p><%= @unit.phonePrimary %> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= @unit.phoneSecondary %></p>
          <span class="h5-grey">Primary Email</span>
          <p><%= @unit.emailPrimary %></p>
          <span class="h5-grey">Secondary Email</span>
          <p><%= @unit.emailSecondary %></p>
          <span class="h5-grey">Notes</span>
          <p><%= @unit.notes %></p>
          <br><br>

          <%= link_to "Delete Family", unit_path(@unit), :class => "btn btn-sm btn-danger pull-right",:data => {:confirm => "Are you sure?",:method => "delete"}, remote: true  %>

        <!-- Javascript form toggle -->
        <div class="edit_family btn btn-sm btn-warning">Edit Family</div>
         <div class="edit_f">
           <%= render "form" %>
         </div>

      </div> <!-- col end -->



      <div class="col-sm-4">
        <div class="people-box">
          <h3>Family Members</h3>

          <% if @unit.parts.any? %>
            <% @unit.parts.each do |part| %>
                <div class="people-text">
                  <%= part.title %>
                  <span class="person-detail"><%= part.firstName %></span>
                  <span class="person-detail"><%= part.lastName %></span><br>
                  <span class="h5-grey">Allergies:</span>
                  <%= part.allergies %><br>
                  <span class="h5-grey">Birthdate:</span>
                  <%= part.birthdate %><br>
                  <%= part.notes %>
                </div><br>
            <% end %>
            <% else %><br>
            <p> No People in this family yet</p>
          <% end %>

        </div> <!-- people-box -->


        <h5>
          <% if @unit.accountOwner === current_user.email %>
            Your user account belongs to this Family
            <%else %>
            This family belongs to:
            <%= @unit.accountOwner %>
          <% end %> <!-- Hides Family data end -->
        </h5>

        <!-- Javascript form toggle -->
        <div class="edit_family btn btn-sm btn-warning">Edit Account Ownership</div>
         <div class="edit_f">
                   <%= render "form_accountOwner" %>
         </div>


         <div class="flip">
                 <div class="card">
                     <div class="face front">
                         <h3>Edit Account Ownership</h3>
                     </div>
                     <div class="face back">
                         <%= render "form_accountOwner" %>
                     </div>
                 </div>
             </div>

      </div> <!-- col end -->
    </div> <!--row end -->

  </div><!-- flex-block end -->
</div><!-- flex-container end -->
