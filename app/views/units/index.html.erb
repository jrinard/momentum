<div class="flex-container-big">
  <div class="flex-block-big">

      <div class="h2-white pull-left">Units - Families</div><br>
      <%= link_to "New Family", new_unit_path, :class => "btn-sm btn-warning pull-right" %>

      <br>
      <br>
      <% if @unit.any? %>
          <% @unit.each do |p1| %>


              <div class="well">
                <span class = "NA" ><%= p1.familyName %> </span>
                  <%#= link_to "Edit", edit_unit_path(p1), :class => "btn-sm btn-warning" %>
                <%= link_to "Edit", unit_path(p1), :class => "btn-sm btn-warning pull-right" %>


              </div><!-- well end -->


              <% end %>
            <% else %>
                <h3 class="h2-white pull-left">No Families</h3>

            <% end %>





  </div><!-- flex-block end -->
</div><!-- flex-container end -->
